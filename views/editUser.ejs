<!-- inclimos el header de template -->
<%- include("template/header") %>
<!-- incluimos la barra de navegacion de template -->
<%- include("template/nav") %>
<!-- incluimos la barra lateral de template -->
<%- include("template/aside") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include("template/breadCrums", {module: 'Edit user'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if(user){ %>
              <div class="container">
                <div class="row">
                  <div class="col-md-6">
                    <form action="/updateUser" method="POST">
                      <input type="hidden" id="id" name="id" value="<%= user.id %>"> 
                      <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" tabindex="1" autofocus> 
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" tabindex="2" >
                      </div>
                      <div class="mb-3">
                        <select name="rol" id="rol" class="form-select" tabindex="3">
                          <option <%= user.rol =='Admin' ? 'selected' : '' %> value="Admin">Admin</option>
                          <option <%= user.rol =='Subscriber' ? 'selected' : '' %> value="Subscriber">Subscriber</option>
                        </select>
                      </div>
                      <button type="submit" class="btn btn-primary" tabindex="4">Submit</button>
                      <a href="/users" class="btn btn-secondary">Cancelar</a>
                    </form>
                  </div>
                  <div class="col-md-6">
                    <div class="row">
                      <div class="col-sm-9">
                        <div class="form-group">
                          <% if(user.image){ %>
                            <img src="../uploads/<%= user.image %>" alt="<%= user.image %>" width="70px" height="70px">
                          <% } %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12">
                        <form action="/upload/<%= user.id %>" method="POST" enctype="multipart/form-data">
                          <input type="file" name="image" class="btn btn-secondary" required>
                          <button type="submit" class="btn btn-primary">upload</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <!-- incluimos el footer de template -->
<%- include("template/footer") %>